<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@drawable/selector_list_item_mid"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <TextView
            android:id="@+id/zcbh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="资产编号:" />

        <TextView
            android:id="@+id/zcbhv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/zcbh"
            android:text="资产编号" />

        <TextView
            android:id="@+id/zcmc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/zcbh"
            android:text="资产名称:" />

        <TextView
            android:id="@+id/zcmcv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/zcbh"
            android:layout_toRightOf="@+id/zcbh"
            android:text="资产名称" />

        <TextView
            android:id="@+id/cznr"
            
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/zcmc"
            android:text="操作内容:" />

        <TextView
            android:id="@+id/cznrv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_below="@+id/zcmc"
            android:layout_toRightOf="@+id/cznr"
            android:text="操作内容操作内容操作内容操作内容操作内容操作内容操作内容操作内容操作内容操作内容操作内容操作内容操作内容操作内容操作内容操作内容" />

        <TextView
            android:id="@+id/czr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/cznrv"
            android:text="操作人:" />

        <TextView
            android:id="@+id/czrv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cznrv"
            android:layout_toRightOf="@+id/czr"
            android:text="操作人" />

        <TextView
            android:id="@+id/czsj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/czr"
            android:text="操作时间:" />

        <TextView
            android:id="@+id/czsjv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/czr"
            android:layout_toRightOf="@+id/czsj"
            android:text="操作时间" />
    </RelativeLayout>

</LinearLayout>