<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/corner_fault"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <FrameLayout
                    android:id="@+id/fl_1_fault"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp" >

                    <ImageView
                        android:id="@+id/img_1_fault"
                        style="@style/image_fault" />

                    <ImageView
                        android:id="@+id/img_error1_fault"
                        style="@style/error_fault"
                        android:layout_gravity="right"
                        android:visibility="invisible" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/fl_2_fault"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:visibility="invisible" >

                    <ImageView
                        android:id="@+id/img_2_fault"
                        style="@style/image_fault" />

                    <ImageView
                        android:id="@+id/img_error2_fault"
                        style="@style/error_fault"
                        android:layout_gravity="right"
                        android:layout_marginRight="15dp"
                        android:visibility="invisible" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/fl_3_fault"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:visibility="invisible" >

                    <ImageView
                        android:id="@+id/img_3_fault"
                        style="@style/image_fault" />

                    <ImageView
                        android:id="@+id/img_error3_fault"
                        style="@style/error_fault"
                        android:layout_gravity="right"
                        android:layout_marginRight="15dp"
                        android:visibility="invisible" />
                </FrameLayout>
            </LinearLayout>

</LinearLayout>
