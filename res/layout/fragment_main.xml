<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F0F3F6"
     >
<include 
    
    layout="@layout/titlebar_user"
    />
    
    <LinearLayout style="@style/wrap_layout" >
        <!-- 上圆角-->
        <LinearLayout style="@style/top_layout">
            <TextView style="@style/usertext" android:text="用户ID" />
          	<TextView 
          	    android:id="@+id/user_id"
          	    android:layout_width="wrap_content"
          	    android:layout_height="wrap_content"
          	    android:text="00000"
          	    />
        </LinearLayout>
        
        <!-- 分割线 -->
          <View style="@style/bg_line"/>
          <!-- 无圆角-->
       <LinearLayout style="@style/mid_layout">
            <TextView style="@style/usertext" android:text="用户名" />
          		<TextView 
          	    android:id="@+id/user_name"
          	    android:layout_width="wrap_content"
          	    android:layout_height="wrap_content"
          	    android:text="测试用户"
          	    />
        </LinearLayout>
             <View style="@style/bg_line"/>
          <!-- 下圆角-->
       <LinearLayout style="@style/bottom_layout"
           android:gravity="right">
            <TextView style="@style/usertext" 
                android:text="用户角色" />
          		<TextView 
          	    android:id="@+id/user_role"
          	  	    android:layout_width="wrap_content"
          	    android:layout_height="wrap_content"
          	    android:text="用户角色"
          	    />
        </LinearLayout>
             
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        />
     <!-- 全圆角-->
    <LinearLayout style="@style/wrap_layout">
        <RelativeLayout style="@style/single_layout"
            android:layout_gravity="bottom"
            
            android:id="@+id/exit">
            <TextView
                android:layout_centerInParent="true" 
                style="@style/usertext" android:text="安全退出"/>
             
        </RelativeLayout>
        
    </LinearLayout>
    
</LinearLayout>
